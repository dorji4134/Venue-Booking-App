<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Booking"
    android:orientation="horizontal">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="-411dp"
        android:background="@drawable/football"
        android:contentDescription="@string/todo" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-240dp"
        android:fontFamily="@font/aclonica"
        android:text="Sports"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:autofillHints="" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-180dp"
        android:layout_marginTop="200dp"
        android:fontFamily="serif"
        android:textColor="#000"
        android:text="Select venue:"
        android:textSize="15sp"
        android:hint="Select the venue:"/>


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="-20dp"
        android:autofillHints="Football" />


    <TextView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-306dp"
        android:layout_marginTop="255dp"
        android:fontFamily="serif"
        android:text="Select time:"
        android:textColor="#000000"
        android:textSize="15sp"
        android:hint="Select time:"/>


    <EditText
        android:id="@+id/et1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-190dp"
        android:layout_marginTop="305dp"
        android:fontFamily="serif"
        android:textSize="15sp"
        android:hint="From:"/>
    <Button
        android:id="@+id/btn1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="305dp"
        android:background="@drawable/bgbtn1"
        android:text="T"
        android:textColor="#FFF"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="305dp"
        android:background="@drawable/bgbtn1"
        android:text="T"
        android:textColor="#FFF"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-140dp"
        android:layout_marginTop="305dp"
        android:fontFamily="serif"
        android:textSize="15sp"
        android:hint="To:"/>

    <EditText
        android:id="@+id/et3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Select Date"
        android:layout_marginTop="355dp"
        android:layout_marginLeft="-250dp"
        android:textSize="15sp"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="355dp"
        android:background="@drawable/bgbtn1"
        android:text="D"
        android:textColor="#FFF"
        android:textSize="14sp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Event Name"
        android:layout_marginTop="415dp"
        android:textAlignment="center"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="-100dp"
        android:textSize="15sp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Coordinator's Name"
        android:layout_marginTop="465dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:layout_marginLeft="-320dp"
        android:textSize="15sp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Coordinator's Email"
        android:layout_marginTop="515dp"
        android:textAlignment="center"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="-320dp"
        android:textSize="15sp"/>



    <Button
        android:id="@+id/ivBtn"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-250dp"
        android:layout_marginTop="580dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/bgbtn1"
        android:lineSpacingExtra="8dp"
        android:text="Reserve"
        android:textColor="#FFF"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="-210dp"
        android:background="@drawable/hamburger" />


</LinearLayout>